@model Author


<h3 class="text-center">Yazar Ekleme Sayfası</h3>
<form asp-area="Management" asp-controller="Author" asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label" asp-for="FirstName">İsim</label>
        <input type="text" class="form-control" asp-for="FirstName" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
     <div class="mb-3">
        <label class="form-label" asp-for="LastName">Soyisim</label>
        <input type="text" class="form-control" asp-for="LastName" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>

