@model Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h3>Ürün Güncelleme Ekranı</h3>

<form class="form-group" method="post" asp-action="UpdateProduct" asp-controller="Product">
    <input asp-for="Id" type="hidden" />
    <div>
        <label asp-for="Name">Ürün Adı</label>
        <input asp-for="Name" type="text" class="form-control" />
    </div>
    <div>
        <label asp-for="Price">Fiyat</label>
        <input asp-for="Price" type="text" class="form-control" />
    </div>
    <div>
        <label asp-for="Stock">Stok</label>
        <input asp-for="Stock" type="text" class="form-control" />
    </div>
    <div style="margin-top:10px">
        <button type="submit" class="btn btn-success">Güncelle</button>
    </div>
</form>

