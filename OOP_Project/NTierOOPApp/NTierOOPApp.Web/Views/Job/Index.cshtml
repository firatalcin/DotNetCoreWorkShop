@model List<Job>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td><a href="/Job/DeleteJob/@item.Id" class="btn btn-danger">Sil</a></td>
                <td><a href="/Job/UpdateJob/@item.Id" class="btn btn-info">Güncelle</a></td>
                <td><a href="/Job/DetailJob/@item.Id" class="btn btn-secondary">Kimler @item.Name ?</a></td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" href="/Job/AddJob">Yeni Meslek Ekle</a>



